source "https://rubygems.org"

gemspec

group :development, :test do
  # dummy app dependencies
  gem "rails"

  # test dependencies
  gem "rspec-rails"
  gem "capybara"
  gem "aruba"
  gem "capybara-webkit"
  gem "launchy"
  gem "capybara-screenshot"
  gem "pry"

  # automation
  gem "guard-bundler"
  gem "guard-rspec"
  gem "guard-rubocop"

  # io services
  gem "rubocop", require: false
  gem "codeclimate-test-reporter", require: false
end
